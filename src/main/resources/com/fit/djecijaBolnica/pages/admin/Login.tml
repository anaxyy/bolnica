<html t:type="layout" title="Vesela bolnica"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<head>
		<title>Login</title>
    </head>
    <body>
        <h1>Login</h1>
        <p>

        <t:form t:id="loginForm">
        	<t:errors/>
            <table>
                <tr>
                    <td>
                        <t:label t:for="userName"></t:label>:
                    </td>
                    <td>
                        <input type="text" t:id="userName" t:type="TextField" t:label="User Name" 
                         t:value="userName" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <t:label t:for="password"></t:label>:
                    </td>
                    <td>
                        <input type="text" t:id="password" t:type="PasswordField" t:label="Password" 
                         t:value="password" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <input type="submit" value="Log In"/>
                    </td>
                </tr>
            </table>
        </t:form>
       
       </p>
       
     <!-- <p>Logged user: ${username}</p> -->  
    </body>
</html>